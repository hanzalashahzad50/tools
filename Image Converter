    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>

    <script>
        // DOM Elements
        const fileInput = document.getElementById('file-input');
        const uploadArea = document.getElementById('upload-area');
        const qualitySlider = document.getElementById('quality-slider');
        const qualityValue = document.getElementById('quality-value');
        const convertBtn = document.getElementById('convert-btn');
        const btnText = document.getElementById('btn-text');
        const spinner = document.getElementById('spinner');
        const results = document.getElementById('results');
        const originalImg = document.getElementById('original-img');
        const convertedImg = document.getElementById('converted-img');
        const originalSize = document.getElementById('original-size');
        const convertedSize = document.getElementById('converted-size');
        const originalDimensions = document.getElementById('original-dimensions');
        const convertedDimensions = document.getElementById('converted-dimensions');
        const originalFormat = document.getElementById('original-format');
        const convertedFormat = document.getElementById('converted-format');
        const savingsPercent = document.getElementById('savings-percent');
        const originalFileSize = document.getElementById('original-file-size');
        const convertedFileSize = document.getElementById('converted-file-size');
        const savingsAbsolute = document.getElementById('savings-absolute');
        const downloadBtn = document.getElementById('download-btn');
        const newConversionBtn = document.getElementById('new-conversion-btn');
        const currentYear = document.getElementById('current-year');

        // Variables
        let originalFile = null;
        let convertedFileBlob = null;
        let convertedFileName = '';

        // Set current year in footer
        currentYear.textContent = new Date().getFullYear();

        // Event Listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.backgroundColor = 'rgba(67, 97, 238, 0.2)';
        });
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.backgroundColor = 'rgba(67, 97, 238, 0.05)';
        });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.backgroundColor = 'rgba(67, 97, 238, 0.05)';
            if (e.dataTransfer.files.length) {
                handleFileSelect(e.dataTransfer.files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleFileSelect(e.target.files[0]);
            }
        });

        qualitySlider.addEventListener('input', () => {
            qualityValue.textContent = qualitySlider.value;
        });

        convertBtn.addEventListener('click', convertImage);
        downloadBtn.addEventListener('click', downloadConvertedImage);
        newConversionBtn.addEventListener('click', resetTool);

        // Functions
        function handleFileSelect(file) {
            // Check if file is an image
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPG, PNG, etc.)');
                return;
            }

            // Check file size (max 10MB)
            if (file.size > 10 * 1024 * 1024) {
                alert('File size exceeds 10MB limit. Please choose a smaller image.');
                return;
            }

            originalFile = file;
            convertBtn.disabled = false;

            // Display original image
            const reader = new FileReader();
            reader.onload = (e) => {
                originalImg.src = e.target.result;
                
                // Get image dimensions and format
                const img = new Image();
                img.onload = function() {
                    originalDimensions.textContent = `${this.width} Ã— ${this.height} px`;
                    originalFormat.textContent = getFileFormat(file.name);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);

            // Display original file size
            originalSize.textContent = formatFileSize(file.size);
            originalFileSize.textContent = formatFileSize(file.size);

            // Update upload area text
            uploadArea.querySelector('p').textContent = file.name;
            uploadArea.querySelector('small').textContent = formatFileSize(file.size);
        }

        function convertImage() {
            if (!originalFile) return;

            // Show loading state
            btnText.textContent = 'Converting...';
            spinner.style.display = 'block';
            convertBtn.disabled = true;

            // Get selected format
            const format = document.querySelector('input[name="format"]:checked').value;
            const quality = parseInt(qualitySlider.value) / 100;

            // Simulate conversion (in a real app, you would use actual conversion libraries)
            setTimeout(() => {
                // In a real implementation, you would:
                // 1. Convert the image to the selected format
                // 2. Apply compression based on quality setting
                // 3. Create a blob of the converted image
                
                // For this demo, we'll simulate the process
                const originalSize = originalFile.size;
                const convertedSizeValue = Math.max(
                    originalSize * (1 - quality * 0.8), 
                    originalSize * 0.1
                ); // Simulate size reduction
                
                // Create a "converted" blob (in real app, this would be the actual converted image)
                convertedFileBlob = new Blob([originalFile], { type: `image/${format}` });
                convertedFileName = originalFile.name.replace(/\.[^/.]+$/, '') + '.' + format;

                // Display results
                displayResults(originalSize, convertedSizeValue, format);

                // Hide loading state
                btnText.textContent = 'Convert Image';
                spinner.style.display = 'none';
                convertBtn.disabled = false;
            }, 1500);
        }

        function displayResults(originalSize, convertedSizeValue, format) {
            // Show converted image (in real app, this would be the actual converted image)
            convertedImg.src = originalImg.src;
            convertedDimensions.textContent = originalDimensions.textContent;
            convertedFormat.textContent = format.toUpperCase();

            // Calculate savings
            const savings = originalSize - convertedSizeValue;
            const savingsPercentage = ((savings / originalSize) * 100).toFixed(1);

            // Update stats
            convertedSize.textContent = formatFileSize(convertedSizeValue);
            convertedFileSize.textContent = formatFileSize(convertedSizeValue);
            savingsPercent.textContent = `${savingsPercentage}%`;
            savingsAbsolute.textContent = formatFileSize(savings);

            // Show results section
            results.style.display = 'block';

            // Scroll to results
            results.scrollIntoView({ behavior: 'smooth' });
        }

        function downloadConvertedImage() {
            if (!convertedFileBlob) return;

            const a = document.createElement('a');
            const url = URL.createObjectURL(convertedFileBlob);
            
            a.href = url;
            a.download = convertedFileName;
            document.body.appendChild(a);
            a.click();

            setTimeout(() => {
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
            }, 0);
        }

        function resetTool() {
            // Reset file input
            fileInput.value = '';
            originalFile = null;
            convertedFileBlob = null;
            convertedFileName = '';

            // Reset UI
            uploadArea.querySelector('p').textContent = 'Drag & Drop your image here';
            uploadArea.querySelector('small').textContent = 'or click to browse files (max 10MB)';
            originalImg.src = '';
            convertedImg.src = '';
            originalSize.textContent = '-';
            convertedSize.textContent = '-';
            originalDimensions.textContent = '-';
            convertedDimensions.textContent = '-';
            originalFormat.textContent = '-';
            convertedFormat.textContent = '-';

            // Hide results
            results.style.display = 'none';

            // Reset button state
            convertBtn.disabled = true;
        }

        function getFileFormat(filename) {
            return filename.split('.').pop().toUpperCase();
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Initialize AdSense
        if (typeof adsbygoogle === 'object') {
            (adsbygoogle = window.adsbygoogle || []).push({});
        }
    </script>
</body>
</html>
